<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/common_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_themcolor_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/title_height"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/common_title_left"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/image_left"
            android:clickable="true"
            android:src="@mipmap/back0"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/common_title_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp16" />

        <ImageButton
            android:id="@+id/common_title_right"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:src="@mipmap/cuowu0" />

    </LinearLayout>

    <View style="@style/style_line_horizontal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_item_gjsz_yy"
        style="@style/text_14sp_black"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="确定"
        android:textColor="@color/them_color"
        android:textSize="@dimen/sp16" />
</LinearLayout>