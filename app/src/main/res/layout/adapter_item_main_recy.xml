<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/adapter_item_main_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp8">

        <TextView
            android:id="@+id/adapter_item_main_text"
            style="@style/text_14sp_black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="正偏差(+):"
            android:textSize="@dimen/sp16" />

        <ImageView
            android:id="@+id/adapter_item_main_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_true_0" />
    </LinearLayout>

    <View style="@style/style_line_horizontal" />
</LinearLayout>