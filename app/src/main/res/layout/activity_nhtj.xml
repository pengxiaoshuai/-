    <LinearLayout
        android:layout_marginTop="@dimen/dp5"
        style="@style/style_NformationInput_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="选择时间:"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/mtime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_edit_background"
            android:hint="请选择时间"
            android:text="2017-07-21"
            android:numeric="integer"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14"/>
        <TextView
            android:id="@+id/activity_ssdl_cx"
            android:layout_marginLeft="@dimen/dp8"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp12"
            android:paddingTop="@dimen/dp7"
            android:paddingBottom="@dimen/dp7"
            android:textColor="@color/white"
            android:background="@drawable/shape_select_them"
            style="@style/text_14sp_black"
            android:text="查询"/>
    </LinearLayout>
    <com.xms.widget.PagerSlidingTabStrip
        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"/>

    <com.xms.widget.NoScrollViewPager
        android:id="@+id/viewpager"
