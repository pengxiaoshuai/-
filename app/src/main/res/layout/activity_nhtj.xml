        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_ssdl_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/text_14sp_black"
                    android:text="江西丰锦电力科技有限公司"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/select"
                    android:layout_marginRight="@dimen/dp10"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售"
                    android:background="@drawable/rondtype"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ssdl_year"
                    style="@style/text_14sp_black"
                    android:text="2017"
                    android:textColor="@color/them_color"
                    android:textSize="@dimen/sp16" />
                <TextView

                    style="@style/text_14sp_black"
                    android:text=" 年 "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16" />
                <TextView
                    android:id="@+id/ssdl_month"
                    style="@style/text_14sp_black"
                    android:text="7"
                    android:textColor="@color/them_color"
                    android:textSize="@dimen/sp16" />
                <TextView
                    style="@style/text_14sp_black"
                    android:text=" 月 "
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16" />
                <TextView
                    android:id="@+id/ssdl_day"
                    style="@style/text_14sp_black"
                    android:text="8"
                    android:textColor="@color/them_color"
                    android:textSize="@dimen/sp16" />
                <TextView
                    style="@style/text_14sp_black"
                    android:text=" 日能耗统计"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
